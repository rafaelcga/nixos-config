{
  "disable_ai": true,

  "auto_install_extensions": {
    "ini": true,
    "ruff": true,
    "toml": true,
    "fish": true,
    "latex": true,
    "caddyfile": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "git-firefly": true,
    "basedpyright": true
  },

  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 18,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Frappé (teal)",
    "light": "Catppuccin Latte (teal)"
  },
  "icon_theme": "Catppuccin Frappé",

  "preferred_line_length": 80,
  "wrap_guides": [80],

  "terminal": {
    "dock": "right"
  },

  "languages": {
    "Python": {
      "language_servers": ["ruff", "basedpyright", "!pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Nix": {
      "language_servers": ["nil", "!nixd"]
    }
  },

  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticSeverityOverrides": {
            "reportAny": false,
            "reportExplicitAny": false
          }
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true
          }
        }
      }
    },
    "nil": {
      "settings": {
        "formatting": {
          "command": ["nixfmt"]
        },
        "diagnostics": {
          "ignored": [],
          "excludedFiles": []
        },
        "nix": {
          "binary": "nix",
          "maxMemoryMB": 2560
        }
      }
    }
  },

  "file_types": {
    "ini": [
      "container",
      "pod",
      "build",
      "volume",
      "service",
      "timer",
      "network"
    ]
  }
}
